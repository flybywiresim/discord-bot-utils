root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4

[*.{js,jsx,ts,tsx}]
indent_size = 2
insert_final_newline = true
tab_width = 2

# YAML is usually 2 spaces
# Markdown will cause weird formating with 4 spaces
[*.{md,yml,yaml}]
indent_size = 2
tab_width = 2
